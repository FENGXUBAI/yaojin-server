/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.logo-placeholder {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-radius: 36rpx;
  background: rgba(255, 255, 255, 0.12);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-text {
  font-size: 84rpx;
  font-weight: 800;
  color: #ffd700;
}

.title {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
}

.login-btn.wechat {
  background: #07c160;
  color: white;
}

.login-btn.guest {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
}

.btn-icon-text {
  font-size: 40rpx;
}

.footer {
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.agreement {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.agreement checkbox {
  transform: scale(0.8);
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.link {
  color: #ffd700;
}
