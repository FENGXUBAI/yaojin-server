/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.logo-placeholder {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.12);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-text {
  font-size: 96rpx;
  font-weight: 800;
  color: #ffd700;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.5);
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 菜单按钮 */
.menu-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.menu-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  border: none;
  font-size: 36rpx;
  font-weight: 600;
}

.menu-btn.primary {
  background: linear-gradient(135deg, #e94560 0%, #ff6b6b 100%);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(233, 69, 96, 0.4);
}

.menu-btn.secondary {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.btn-icon {
  font-size: 44rpx;
}

.btn-text {
  font-size: 36rpx;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(26, 26, 46, 0.95);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  padding-bottom: env(safe-area-inset-bottom);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.nav-icon {
  font-size: 48rpx;
}

.nav-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  width: 600rpx;
  background: #1a1a2e;
  border-radius: 24rpx;
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 40rpx;
}

.modal-input {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 0 30rpx;
  color: white;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.modal-buttons {
  width: 100%;
  display: flex;
  gap: 30rpx;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  border: none;
}

.modal-btn.cancel {
  background: rgba(255, 255, 255, 0.1);
  color: white;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #e94560 0%, #ff6b6b 100%);
  color: white;
}

/* 匹配中 */
.modal-content.matching {
  gap: 30rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #ffd700;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.matching-text {
  font-size: 36rpx;
  color: white;
}

.matching-time {
  font-size: 48rpx;
  color: #ffd700;
  font-weight: bold;
}
