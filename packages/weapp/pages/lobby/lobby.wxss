/* pages/lobby/lobby.wxss */

.lobby-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a472a 0%, #0d2818 100%);
  padding-bottom: 40rpx;
}

/* 用户信息栏 */
.user-banner {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #2d5a3d 0%, #1a472a 100%);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #FFD700;
  overflow: hidden;
}

.user-avatar.avatar-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #4c669f 0%, #3b5998 100%);
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD700;
}

.user-stats {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.coins, .diamonds {
  font-size: 28rpx;
  color: #fff;
}

.level-badge {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #333;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 公告栏 */
.notice-bar {
  display: flex;
  align-items: center;
  background: rgba(255, 215, 0, 0.1);
  padding: 16rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 215, 0, 0.2);
}

.notice-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #FFD700;
}

/* 主操作区 */
.main-actions {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
  gap: 20rpx;
}

.action-card {
  flex: 1;
  min-width: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.action-card.quick-start {
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
}

.action-card.friend-room {
  background: linear-gradient(135deg, #2196F3 0%, #1565C0 100%);
}

.action-card.tournament {
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
}

.action-icon {
  font-size: 80rpx;
  margin-right: 20rpx;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  display: block;
}

.action-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-top: 8rpx;
}

.action-btn {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  margin-top: 16rpx;
}

.action-btn text {
  font-size: 26rpx;
  color: #fff;
}

.action-card:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 快捷功能 */
.quick-features {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 0 30rpx;
  border-radius: 16rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  font-size: 48rpx;
}

.feature-name {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 8rpx;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  background: #1a472a;
  color: #FFD700;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-body {
  padding: 40rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-actions .btn {
  flex: 1;
}

/* 输入框 */
.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
