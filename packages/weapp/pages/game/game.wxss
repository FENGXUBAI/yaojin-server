/* pages/game/game.wxss */

/* 出牌区域 */
.play-area {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.played-cards {
  display: flex;
  justify-content: center;
}

.play-label {
  font-size: 28rpx;
  color: #FFD700;
  margin-top: 10rpx;
}

/* 玩家信息 */
.player-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(0, 0, 0, 0.3);
  padding: 16rpx;
  border-radius: 16rpx;
}

.player-name {
  font-size: 26rpx;
  color: #fff;
  margin-top: 8rpx;
}

.card-count {
  font-size: 22rpx;
  color: #FFD700;
  background: rgba(255, 215, 0, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  margin-top: 6rpx;
}

.pass-text {
  font-size: 28rpx;
  color: #FF6B6B;
  margin-top: 10rpx;
}

/* 我的区域 */
.player-bottom {
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 100%);
}

.my-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.my-details {
  margin-left: 16rpx;
}

.my-name {
  font-size: 32rpx;
  color: #FFD700;
  font-weight: bold;
  display: block;
}

.my-score {
  font-size: 24rpx;
  color: #ccc;
  display: block;
}

/* 操作按钮栏 */
.action-bar {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.action-bar .btn {
  min-width: 150rpx;
}

/* 倒计时 */
.timer-hint {
  text-align: center;
}

.timer-text {
  font-size: 28rpx;
  color: #FF6B6B;
}

/* 手牌区域 */
.my-cards {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  max-width: 100%;
  padding: 0 20rpx;
}

.my-cards .card {
  margin-left: -30rpx;
  transition: transform 0.2s;
}

.my-cards .card:first-child {
  margin-left: 0;
}

.my-cards .card.selected {
  transform: translateY(-20rpx);
  border-color: #FFD700;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.5);
}

/* 炸弹特效 */
.bomb-effect {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  opacity: 0;
  transition: all 0.3s ease-out;
  z-index: 100;
}

.bomb-effect.active {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
}

.bomb-text {
  font-size: 80rpx;
  font-weight: bold;
  color: #FF6B6B;
  text-shadow: 0 0 20rpx #FF0000;
}

/* 游戏结束弹窗 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.result-content {
  background: linear-gradient(135deg, #2d5a3d 0%, #1a472a 100%);
  border-radius: 30rpx;
  padding: 60rpx 80rpx;
  text-align: center;
  border: 4rpx solid #FFD700;
}

.result-title {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.result-win {
  color: #FFD700;
}

.result-lose {
  color: #FF6B6B;
}

.result-score {
  font-size: 36rpx;
  color: #fff;
  margin-bottom: 40rpx;
}

.result-actions {
  display: flex;
  gap: 30rpx;
}

.result-actions .btn {
  min-width: 200rpx;
}
