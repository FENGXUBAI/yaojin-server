/**app.wxss**/
page {
  background-color: #1a472a;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  min-width: 200rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4c669f 0%, #3b5998 50%, #192f6a 100%);
  color: #fff;
}

.btn-success {
  background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
  color: #fff;
}

.btn-warning {
  background: linear-gradient(135deg, #FFC107 0%, #FFA000 100%);
  color: #333;
}

.btn-danger {
  background: linear-gradient(135deg, #E91E63 0%, #C2185B 100%);
  color: #fff;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 卡牌样式 */
.card {
  width: 90rpx;
  height: 130rpx;
  background: #fff;
  border-radius: 10rpx;
  border: 2rpx solid #ccc;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx;
  box-shadow: 2rpx 2rpx 8rpx rgba(0,0,0,0.2);
  position: relative;
}

.card-small {
  width: 60rpx;
  height: 86rpx;
  padding: 4rpx;
}

.card-selected {
  transform: translateY(-30rpx);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.3);
}

.card-rank {
  font-size: 28rpx;
  font-weight: bold;
}

.card-suit {
  font-size: 24rpx;
}

.card-red {
  color: #d00;
}

.card-black {
  color: #000;
}

/* 头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #FFD700;
  overflow: hidden;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

/* 头像占位符 */
.avatar-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #4c669f 0%, #3b5998 100%);
  color: #fff;
}

.avatar-placeholder .avatar-text {
  font-size: 40rpx;
  font-weight: bold;
}

.avatar-small.avatar-placeholder .avatar-text {
  font-size: 28rpx;
}

/* 游戏桌面 */
.game-table {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #1a472a 0%, #0d2818 100%);
  position: relative;
}

/* 玩家区域 */
.player-area {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.player-top {
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.player-left {
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.player-right {
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.player-bottom {
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* 手牌区域 */
.hand-area {
  display: flex;
  justify-content: center;
  padding: 20rpx;
}

.hand-card {
  margin-left: -40rpx;
}

.hand-card:first-child {
  margin-left: 0;
}

/* 操作按钮区 */
.action-bar {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
}

/* 出牌区域 */
.play-area {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  min-width: 400rpx;
  min-height: 160rpx;
}

/* 聊天气泡 */
.chat-bubble {
  background: rgba(0,0,0,0.7);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  max-width: 300rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #fff;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  min-width: 500rpx;
  max-width: 90%;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 表情选择器 */
.emoji-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(0,0,0,0.8);
  border-radius: 16rpx;
}

.emoji-item {
  font-size: 48rpx;
  padding: 10rpx;
}

/* 快捷短语 */
.quick-phrase {
  background: rgba(255,255,255,0.2);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin: 6rpx;
}
